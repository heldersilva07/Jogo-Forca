<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.heldersilva.forca.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/LabelNumeroDeVidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Numero de vidas:"
        android:textColor="@color/blue"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/btnJogar"
        android:layout_width="99dp"
        android:layout_height="73dp"
        android:text="Jogar"
        android:layout_marginStart="50dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="50dp"
        app:layout_constraintRight_toRightOf="@+id/txtPerdeu"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnReiniciar"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        tools:layout_editor_absoluteY="379dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/txtInserir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="1"
        android:textSize="20sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="207dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/lblVidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/orange"
        android:layout_marginStart="12dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="10dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/LabelNumeroDeVidas"
        android:layout_marginLeft="12dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Letras utilizadas:"
        android:textColor="@color/blue"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblLetrasUsadas"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/lblLetrasUsadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/orange"
        android:layout_marginStart="11dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/lblVidas"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="11dp" />

    <TextView
        android:id="@+id/lblPalavraEscolhida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        app:layout_constraintRight_toLeftOf="@+id/lblVidas"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txtGanhou"
        android:layout_marginTop="145dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="144dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnJogar"
        app:layout_constraintTop_toTopOf="@+id/lblVidas"
        android:layout_marginLeft="59dp"
        android:layout_marginRight="59dp" />

    <Button
        android:id="@+id/btnReiniciar"
        android:layout_width="102dp"
        android:layout_height="73dp"
        android:text="Reiniciar"
        android:layout_marginStart="31dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="59dp"
        app:layout_constraintLeft_toRightOf="@+id/btnJogar"
        android:layout_marginLeft="31dp"
        tools:layout_editor_absoluteY="379dp" />

    <TextView
        android:id="@+id/txtGanhou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GANHOU!!!!"
        android:textSize="20sp"
        android:textColor="@color/green"
        android:layout_marginStart="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtPerdeu"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txtInserir"
        android:layout_marginLeft="40dp" />

    <TextView
        android:id="@+id/txtPerdeu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PERDEU!"
        android:textSize="20sp"
        android:textColor="@color/red"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/txtInserir"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txtGanhou" />

</android.support.constraint.ConstraintLayout>
